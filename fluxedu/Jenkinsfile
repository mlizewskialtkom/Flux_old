pipeline {
    agent any
    stages{
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('build'){
            steps{
                sh 'echo "xx"'
                sh 'pwd'
                sh 'ls'
                sh 'cd fluxedu'
                sh 'ls'
                sh './fluxedu/gradlew clean build'
            }
        }
        stage('test'){
            steps{
                //run app tests using gradle
                sh 'cd fluxedu'
                sh './fluxedu/gradlew test'
            }
        }
    }

    post{
        success{
            echo 'Sukces'
        }
    }
}